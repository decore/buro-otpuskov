<% @bo_offset = "bo/Прислать смс" %>
<!--Заявка на подбор тура-->
<div id="modal-sendsms" class="modal hide fade">
    <div class="modal-header"> <a href="#" class="close">&times;</a>
        <h3>Меню отправки смс с адресом</h3>
    </div>
    <div class="modal-body">
        <div class="alert-message success">
            <p><strong>Смс отправлено</strong></p>
        </div>
        <form action="/" method="post">
            <div class="input">
                <div class="input-prepend"> <span class="add-on">Введите номер</span>
                    <input class="span5" id="name" name="name" size="16" type="text"/>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn success">отправить себе смс</button>
            </div>
        </form>
    </div>
</div>